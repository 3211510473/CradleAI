# 许可证管理系统环境变量示例

# 环境设置
ENV=production  # production, development, test

# 数据库设置
LICENSE_DB_PATH=/path/to/your/license.db

# 安全密钥（生产环境必须更改为强密钥）
LICENSE_MASTER_KEY=your_very_secure_master_key_at_least_32_chars
API_ADMIN_TOKEN=your_very_secure_admin_token
PAYMENT_WEBHOOK_SECRET=your_payment_webhook_shared_secret

# API设置
API_HOST=127.0.0.1  # 内部监听地址
API_PORT=5000
API_URL_PREFIX=/api/v1

# 速率限制设置
RATE_LIMIT_ENABLED=1  # 1: 启用, 0: 禁用
RATE_LIMIT_WINDOW=60  # 速率限制窗口（秒）
RATE_LIMIT_MAX_REQUESTS=5  # 窗口内最大请求数
MAX_FAILED_ATTEMPTS=5  # 锁定前的最大失败尝试次数
LOCKOUT_DURATION=600  # 锁定时长（秒）

# Redis设置（可选，用于缓存和速率限制）
REDIS_ENABLED=0  # 1: 启用, 0: 禁用
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # 如果需要密码，请设置

# 邮件设置
SMTP_SERVER=smtp.qq.com
SMTP_PORT=587
SMTP_USERNAME=your_email@qq.com
SMTP_PASSWORD=your_email_password_or_app_specific_password
EMAIL_SENDER=许可证系统 <noreply@cradleintro.top>

# 日志设置
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/path/to/your/license_server.log
